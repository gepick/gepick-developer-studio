{
  "compilerOptions": {
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2018",
    "jsx": "react",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "outDir": "build",
    "noUnusedLocals": true,
    "lib": ["es6", "es7", "dom"],
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    }
  },
  "exclude": ["build", "node_modules"]
}
